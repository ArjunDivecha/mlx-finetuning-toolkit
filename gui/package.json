{
  "name": "mlx-finetune-gui",
  "version": "1.0.0",
  "description": "Beautiful GUI for MLX fine-tuning on macOS",
  "main": "dist/main.js",
  "scripts": {
    "dev": "npm run dev:frontend",
    "dev:backend": "cd backend && python -m uvicorn main:app --reload --host 0.0.0.0 --port 8000",
    "dev:frontend": "npm run build:main && electron .",
    "build": "npm run build:frontend && npm run build:main",
    "build:frontend": "cd frontend && npm run build",
    "build:main": "tsc src/main.ts src/preload.ts --outDir dist --target es2020 --module commonjs --esModuleInterop --allowSyntheticDefaultImports",
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "test": "jest"
  },
  "keywords": [
    "mlx",
    "fine-tuning",
    "llm",
    "machine-learning",
    "macos",
    "electron",
    "gui"
  ],
  "author": "Arjun",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "concurrently": "^8.2.2",
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3",
    "jest": "^29.7.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "socket.io-client": "^4.7.4"
  },
  "build": {
    "appId": "com.arjun.mlx-finetune-gui",
    "productName": "MLX Fine-Tune GUI",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "frontend/dist/**/*",
      "backend/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": "dmg"
    }
  }
}
